<?xml version="1.0" encoding="UTF-8"?>
<ruleset name="Morgo">
    <description>Morgo coding standards</description>

    <arg value="ps"/>
    <arg name="colors"/>
    <arg name="extensions" value="php,inc/php"/>
    <arg name="encoding" value="utf-8"/>
    <ini name="memory_limit" value="1.5G"/>

    <file>src</file>
    <file>tests</file>

    <rule ref="PSR2">
        <exclude name="Squiz.Functions.MultiLineFunctionDeclaration.BraceOnSameLine"/>
    </rule>
</ruleset>
